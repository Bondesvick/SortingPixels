<Window x:Class="SortingPixels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortingPixels"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button" x:Key="buttons">
            <!--<Setter Property="Background" Value="Aqua"/>-->
            <Setter Property="Margin" Value="60,0,90,0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="120"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Random Color" Style="{StaticResource buttons}"/>
            <Button Content="Color Sorting" Style="{StaticResource buttons}"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="#FF404244" BorderThickness="2" Width="450" Height="350">
            <Image />
        </Border>
        
    </Grid>
</Window>
